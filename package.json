{
  "name": "mafia-game",
  "version": "1.0.0",
  "description": "Multiplayer Mafia Game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"node server.js\" \"npx tailwindcss -i ./src/input.css -o ./style.css --watch\"",
    "build": "node -e \"const { execSync } = require('child_process'); try { execSync('npx tailwindcss -i ./src/input.css -o ./style.css'); } catch (e) { console.error(e); process.exit(1); }\"",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./style.css",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./style.css --watch"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "express": "^4.18.2",
    "postcss": "^8.4.49",
    "pusher": "^5.2.0",
    "pusher-js": "^8.4.0",
    "socket.io": "^4.7.2",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {}
}
