{
  "name": "mafia-game",
  "version": "1.0.0",
  "description": "Multiplayer Mafia Game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"node server.js\" \"tailwindcss -i ./src/input.css -o ./style.css --watch\"",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./src/input.css -o ./style.css",
    "watch:css": "tailwindcss -i ./src/input.css -o ./style.css --watch"
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1"
  }
}
